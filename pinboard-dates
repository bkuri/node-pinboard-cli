#!/usr/bin/coffee
'use strict'

{command, render, verify} = (require './tools')
verify()

argv = process.argv.concat()
Pinboard = (require 'node-pinboard')


argv.push ''

command 'Returns a list of dates with the number of posts at each date.'
  .option '-t, --tags <tags>', 'filter by up to 3 tags (comma-separated)'

  .action ->
    try
      options = switch
        when command.tags? then tags: command.tags
        else {}

      new Pinboard(process.env.PINBOARD_TOKEN).dates options, (result) ->
        render result, 'date'

    catch e
      render e, 'error'

  .parse argv
