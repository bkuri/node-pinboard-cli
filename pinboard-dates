#!/usr/bin/coffee
'use strict'

{render, verify} = (require './tools')
verify()


command = (require 'commander')
Pinboard = (require 'node-pinboard')


action = ->
  try
    options = switch
      when command.tags? then tags: command.tags
      else {}

    new Pinboard(process.env.PINBOARD_TOKEN).dates options, (result) ->
      render result, 'date'

  catch e
    render e, 'error'


argv = process.argv.concat()
argv.push ''


command
  .description 'Returns a list of dates with the number of posts at each date.'
  .option '-f, --format [color,json]', 'display all errors', 'color'
  .option '-t, --tags <tags>', 'filter by up to 3 tags (comma-separated)'
  .option '-v, --verbose', 'display all errors'
  .action action
  .parse argv
