#!/usr/bin/coffee
'use strict'


{argv, define, pinboard, respond, verify} = (require './tools')

verify()

command = (define 'Returns a list of dates with the number of posts at each date.')
  .option '-t, --tags <tags>', 'filter by up to 3 tags (comma-separated)'

command
  .action ->
    try
      options = switch
        when command.tags? then tags: command.tags
        else {}

      pinboard().dates options, (result) ->
        respond result, 'date'

    catch e
      respond e, 'error'

  .parse argv()
