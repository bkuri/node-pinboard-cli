#!/usr/bin/coffee
'use strict'

# chalk = (require 'chalk')
command = (require 'commander')
{token} = (require 'config')
Pinboard = (require 'node-pinboard')
pinboard = new Pinboard(token)


action = ->
  try
    options = switch
      when command.tags? then tags: command.tags
      else {}

    pinboard.dates options, (result) ->
      console.log (JSON.stringify result)
      process.exit not (result.result_code? and (result.result_code is 'done'))

  catch e
    console.error e
    process.exit yes

  return


action() if (process.argv.length < 3)


command
  .description 'Returns a list of dates with the number of posts at each date.'
  .option '-t, --tags <tags>', 'filter by up to 3 tags (comma-separated)'
  .action action
  .parse process.argv
