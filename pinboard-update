#!/usr/bin/coffee
'use strict'

# chalk = (require 'chalk')
{token} = (require 'config')
Pinboard = (require 'node-pinboard')


action = ->
  try
    new Pinboard(token).update (result) ->
      console.log (JSON.stringify result)
      process.exit no

  catch e
    console.error e
    process.exit yes

  return


action() if (process.argv.length < 3)


(require 'commander')
  .description 'Returns the most recent time a bookmark was added, updated or deleted. Use this before calling `all` to see if the data has changed since the last fetch.'
  .action action
  .parse process.argv
