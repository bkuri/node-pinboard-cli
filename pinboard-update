#!/usr/bin/coffee
'use strict'

{command, render, verify} = (require './tools')
verify()

argv = process.argv.concat()
Pinboard = (require 'node-pinboard')


argv.push ''

command 'Returns the most recent time a bookmark was added, updated or deleted. Use this before calling `all` to see if the data has changed since the last fetch.'
  .action ->
    try
      new Pinboard(process.env.PINBOARD_TOKEN).update (result) ->
        return unless (command.verbose or process.env.PINBOARD_VERBOSE)

        if process.env.PINBOARD_FORMAT is 'color'
          result.update_time = "Last updated #{(require 'moment')(result.update_time).fromNow()}"

        render result, 'update_time'

    catch e
      render e, 'error'

  .parse argv
