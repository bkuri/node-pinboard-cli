#!/usr/bin/coffee
'use strict'

{render, verify} = (require './tools')
verify()


command = (require 'commander')
Pinboard = (require 'node-pinboard')


action = ->
  try
    new Pinboard(process.env.PINBOARD_TOKEN).update (result) ->
      (render result, 'update_time') if (command.verbose or process.env.PINBOARD_VERBOSE)

  catch e
    render e, 'error'


argv = process.argv.concat()
argv.push ''


command
  .description 'Returns the most recent time a bookmark was added, updated or deleted. Use this before calling `all` to see if the data has changed since the last fetch.'
  .option '-f, --format [color,json]', 'display all errors', 'color'
  .option '-v, --verbose', 'display all errors'
  .action action
  .parse argv
