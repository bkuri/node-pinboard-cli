#!/usr/bin/coffee
'use strict'


{argv, define, one, pinboard, respond, verify} = (require './tools')

verify()

command = (define 'Returns the user\'s secret RSS key (for viewing private feeds).')

command
  .option '-f --format [fmt]', 'output format', /^(color|json)$/i, 'color'

  .action ->
    format = one(command.format, process.env.PINBOARD_FORMAT)

    try
      pinboard().userSecret (result) ->
        respond result, format

    catch e
      respond e, format, 'error'

  .parse argv()
