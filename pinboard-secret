#!/usr/bin/coffee
'use strict'

{command, render, verify} = (require './tools')
verify()

argv = process.argv.concat()
Pinboard = (require 'node-pinboard')


argv.push ''

command 'Returns the user\'s secret RSS key (for viewing private feeds).'
  .action ->
    try
      new Pinboard(process.env.PINBOARD_TOKEN).userSecret(render)

    catch e
      render e, 'error'

  .parse argv
