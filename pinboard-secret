#!/usr/bin/coffee
'use strict'


# chalk = (require 'chalk')
config = (require './config')
Pinboard = (require 'node-pinboard')


action = ->
  new Pinboard(config.token).userSecret (body) ->
    console.log (JSON.stringify body)


action() if (process.argv.length < 3)


(require 'commander')
  .description 'Returns the user\'s secret RSS key (for viewing private feeds).'
  .action action
  .parse process.argv
