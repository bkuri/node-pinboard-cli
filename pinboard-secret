#!/usr/bin/coffee
'use strict'

# chalk = (require 'chalk')
{token} = (require 'config')
Pinboard = (require 'node-pinboard')


action = ->
  try
    new Pinboard(token).userSecret (result) ->
      console.log (JSON.stringify result)

  catch e
    console.error e
    process.exit yes

  return


action() if (process.argv.length < 3)


(require 'commander')
  .description 'Returns the user\'s secret RSS key (for viewing private feeds).'
  .action action
  .parse process.argv
