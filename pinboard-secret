#!/usr/bin/coffee
'use strict'

{render, verify} = (require './tools')
verify()


argv = process.argv.concat()
Pinboard = (require 'node-pinboard')


action = ->
  try
    new Pinboard(process.env.PINBOARD_TOKEN).userSecret(render)

  catch e
    render e, 'error'


argv.push ''


(require 'commander')
  .description 'Returns the user\'s secret RSS key (for viewing private feeds).'
  .option '-f, --format [color,json]', 'display all errors', 'color'
  .option '-v, --verbose', 'display all errors'
  .action action
  .parse argv
