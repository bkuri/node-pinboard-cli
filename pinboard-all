#!/usr/bin/coffee
'use strict'


{argv, define, one, pinboard, respond, verify} = (require './tools')

verify()

command = (define 'Returns all bookmarks in the user\'s account.')

command
  .option '-f --format [fmt]', 'output format', /^(color|json)$/i, 'color'
  .option '-F --from-dt', 'bookmarks created after this time'
  .option '-m --meta <int>', 'include a change detection signature for each bookmark'
  .option '-r --results <int>', 'number of results to return', -1
  .option '-s --start <offset>', 'offset value', 0
  .option '-t --tags <tags>', 'filter by up to 3 tags (comma-separated)'
  .option '-T --to-dt', 'bookmarks created before this time'

  .action ->
    format = one(command.format, process.env.PINBOARD_FORMAT)

    try
      options =
        fromdt: command.fromDt
        meta: command.meta
        results: command.results
        start: command.start
        tag: command.tag
        todt: command.toDt

      pinboard().all options, (result) ->
        respond result, format, 'bookmark'

    catch e
      respond e, format, 'error'

  .parse argv()
