#!/usr/bin/coffee
'use strict'

{command, render, verify} = (require './tools')
verify()

argv = process.argv.concat()
Pinboard = (require 'node-pinboard')


argv.push ''

command 'Returns one or more posts on a single day matching the arguments. If no date or url is given, date of most recent bookmark will be used.'
  .option '-d, --date <date>', 'filter by date'
  .option '-m, --meta', 'include a change detection signature in meta'
  .option '-t, --tags <tags>', 'filter by < 4 tags (comma-separated)'
  .option '-u, --url <url>', 'get a specific url'

  .action ->
    try
      options =
        dt: command.date
        meta: if command.meta? and (command.meta is yes) then 'yes' else 'no'
        tags: command.tags
        url: command.url

      new Pinboard(process.env.PINBOARD_TOKEN).get options, (result) ->
        render result, 'bookmark'

    catch e
      render e, 'error'

  .parse argv
