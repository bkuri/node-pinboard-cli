#!/usr/bin/coffee
'use strict'


{argv, define, one, pinboard, respond, verify, yesno} = (require './tools')

verify()

command = (define 'Returns one or more posts on a single day matching the arguments. If no date or url is given, date of most recent bookmark will be used.')

command
  .option '-d --date <date>', 'filter by date'
  .option '-f --format [fmt]', 'output format', /^(color|json)$/i, 'color'
  .option '-m --meta', 'include a change detection signature in meta'
  .option '-t --tags <tags>', 'filter by < 4 tags (comma-separated)'
  .option '-u --url <url>', 'get a specific url'

  .action ->
    format = one(command.format, process.env.PINBOARD_FORMAT)

    try
      options =
        dt: command.date
        meta: yesno(command.meta)
        tags: command.tags
        url: command.url

      pinboard().get options, (result) ->
        respond result, format, 'bookmark'

    catch e
      respond e, format, 'error'

  .parse argv()
