#!/usr/bin/coffee
'use strict'


# chalk = (require 'chalk')
command = (require 'commander')
config = (require './config')
Pinboard = (require 'node-pinboard')
pinboard = new Pinboard(config.token)


action = ->
  try
    options =
      dt: command.date
      meta: if command.meta? and (command.meta is yes) then 'yes' else 'no'
      tags: command.tags
      url: command.url

    pinboard.get options, (body) ->
      console.log (JSON.stringify body)
      process.exit no

  catch e
    console.error e
    process.exit yes

  return


action() if (process.argv.length < 3)


command
  .description 'Returns one or more posts on a single day matching the arguments. If no date or url is given, date of most recent bookmark will be used.'
  .option '-d, --date <date>', 'filter by date'
  .option '-m, --meta', 'include a change detection signature in meta'
  .option '-t, --tags <tags>', 'filter by < 4 tags (comma-separated)'
  .option '-u, --url <url>', 'get a specific url'
  .action action
  .parse process.argv
