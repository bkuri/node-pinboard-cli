#!/usr/bin/coffee
'use strict'


{argv, define, one, pinboard, respond, verify} = (require './tools')

verify()

command = (define 'Returns a list of the user\'s most recent posts, filtered by tag.')

command
  .option '-c --count [int]', 'number of results to return. Default is 15, max is 100', 15
  .option '-f --format [fmt]', 'output format', /^(color|json)$/i, 'color'
  .option '-t --tags <tags>', 'filter by up to 3 tags (comma-separated)'

  .action ->
    format = one(command.format, process.env.PINBOARD_FORMAT)

    try
      options =
        count: command.count
        tags: command.tags

      pinboard().recent options, (result) ->
        respond result, format, 'bookmark'

    catch e
      respond e, format, 'error'

  .parse argv()
