#!/usr/bin/coffee
'use strict'


(process.exit yes) if (process.argv.length < 3)

{argv, define, pinboard, render, verbose, verify} = (require './tools')
verify()

command = define 'Delete a bookmark.'
  .action (url) ->
    try
      pinboard().delete url, (result) ->
        (render result, 'result_code') if (command.verbose or process.env.PINBOARD_VERBOSE)

    catch e
      render e, 'error'

  .usage '<url>'
  .parse argv()
