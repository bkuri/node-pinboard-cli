#!/usr/bin/coffee
'use strict'


(process.exit yes) if (process.argv.length < 3)


{PINBOARD_FORMAT, PINBOARD_VERBOSE} = process.env
{argv, define, format, one, pinboard} = require('./tools')


del = define('Delete a bookmark.')

del
  .option '-f --format [fmt]', 'output format', /^(color|json)$/i, PINBOARD_FORMAT
  .option '-v --verbose', 'display all output'

  .action (url) ->
    respond = format one(del.format, PINBOARD_FORMAT)

    try
      pinboard().delete url, (result) ->
        return if (del.verbose or PINBOARD_VERBOSE)
        respond result, 'result_code'

    catch error
      respond error, 'error'

  .usage '<url>'
  .parse argv()
