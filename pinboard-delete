#!/usr/bin/coffee
'use strict'


{argv, define, pinboard, respond, verbose, verify} = (require './tools')

(respond 'Error: You must specify a url.', 'error') if (process.argv.length < 3)
verify()

command = (define 'Delete a bookmark.')

command
  .action (url) ->
    try
      pinboard().delete url, (result) ->
        (respond result, 'result_code') if (command.verbose or process.env.PINBOARD_VERBOSE)

    catch e
      respond e, 'error'

  .usage '<url>'
  .parse argv()
