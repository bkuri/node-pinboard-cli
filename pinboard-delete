#!/usr/bin/coffee
'use strict'


{argv, define, one, pinboard, respond, verify} = (require './tools')

(respond 'Error: You must specify a url.', 'error') if (process.argv.length < 3)
verify()

command = (define 'Delete a bookmark.')

command
  .option '-f --format [fmt]', 'output format', /^(color|json)$/i, 'color'
  .option '-v --verbose', 'display all output'

  .action (url) ->
    format = one(command.format, process.env.PINBOARD_FORMAT)

    try
      pinboard().delete url, (result) ->
        return if (command.verbose or process.env.PINBOARD_VERBOSE)
        respond result, format, 'result_code'

    catch e
      respond e, format, 'error'

  .usage '<url>'
  .parse argv()
