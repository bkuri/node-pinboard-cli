#!/usr/bin/coffee
'use strict'

(process.exit yes) if (process.argv.length < 3)
{command, render, verify} = (require './tools')
verify()

Pinboard = (require 'node-pinboard')


command 'Delete a bookmark.'
  .usage '<url>'

  .action (url) ->
    try
      new Pinboard(process.env.PINBOARD_TOKEN).delete url, (result) ->
        (render result, 'result_code') if (command.verbose or process.env.PINBOARD_VERBOSE)

    catch e
      render e, 'error'

  .parse process.argv
